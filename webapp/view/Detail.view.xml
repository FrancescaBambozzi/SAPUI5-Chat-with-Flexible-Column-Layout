<mvc:View
	controllerName="myapp.chatapp.controller.Detail"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<m:Page
		showHeader="true"
		showNavButton="true"
		navButtonPress=".navBack"
	>
		<ObjectPageLayout
			alwaysShowContentHeader="true"
			isChildPage="true"
		>
			<headerTitle>
				<ObjectPageDynamicHeaderTitle>
					<heading>
						<m:HBox>
							<m:Avatar
								src="{convSet>photo}"
							/>
							<m:Title
								text="{convSet>contactName}"
								class="sapUiTinyMargin"
							/>
						</m:HBox>
					</heading>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<sections>
			<ObjectPageSection
				showTitle="false"
				titleUppercase="true"
			>
				<subSections>
					<ObjectPageSubSection
						mode="Collapsed"
						showTitle="true"
						titleUppercase="false"
					>
						<blocks>
							<m:List
								id="idMessagesList"
								noDataText=""
								showUnread="false"
							/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</m:Page>
</mvc:View>
