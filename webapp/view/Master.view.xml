<mvc:View
	controllerName="myapp.chatapp.controller.Master"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
>
	<f:DynamicPage>
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Teams Chat"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<VBox fitContainer="true">
				<OverflowToolbar class="sapFDynamicPageAlignContent">
					<SearchField
						search=".onSearch"
						width="17rem"
					/>
				</OverflowToolbar>
				<Table
					id="listId"
					inset="false"
					items="{
						path: '/conversations',
						sorter: {
							path: 'messages/0/date',
							descending: true,
							group: true
						}
					}"
					class="sapFDynamicPageAlignContent"
					width="auto"
				>
					<columns>
						<Column width="12em">
							<Text text="Contacts"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem
							type="Navigation"
							press=".onPressNavTo"
						>
							<cells>
								<ObjectIdentifier
									title="{contactName}"
									text="{=${messages}.length > 1 ? ${messages/0/text} : '' }"
								/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>